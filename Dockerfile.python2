# vim:set ft=dockerfile:
FROM debian:stretch
MAINTAINER "cytopia" <cytopia@everythingcli.org>

RUN set -x \
	&& apt-get update \
	&& apt-get install --no-install-recommends --no-install-suggests -y \
		apt-transport-https \
		gnupg \
		python-apt \
		python-dev \
		python-pip \
		python-setuptools \
	&& rm -rf /var/lib/apt/lists/* \
	&& apt-get purge -y --autoremove \
	&& update-alternatives --install /usr/bin/python python /usr/bin/python2 1

RUN set -x \
	&& pip install wheel \
	&& pip install ansible

COPY ./ /ansible

WORKDIR /ansible

# Ansible Playbook
RUN set -x \
	&& ROLES="$( for d in $(/bin/ls roles/); do if [ -d roles/${d} ]; then echo $d; fi done | grep -vE '*-meta$' | sort -R )" \
	&& ( \
		echo "# META install"; \
		echo "- hosts: localhost"; \
		echo "  roles:"; \
		echo "    - apt-repo-meta"; \
		echo "    - apt-meta"; \
		echo "# NORM install"; \
		echo "- hosts: localhost"; \
		echo "  vars:"; \
		for r in ${ROLES}; do \
			echo "    - $(echo $r | sed 's/-/_/g'): 'install'"; \
		done; \
		echo "  roles:"; \
		for r in ${ROLES}; do \
			echo "    - ${r}"; \
		done; \
		\
		\
		echo "# NORM remove"; \
		echo "- hosts: localhost"; \
		echo "  vars:"; \
		for r in ${ROLES}; do \
			echo "    - $(echo $r | sed 's/-/_/g'): 'remove'"; \
		done; \
		echo "  roles:"; \
		for r in ${ROLES}; do \
			echo "    - ${r}"; \
		done; \
		echo "# META remove"; \
		echo "- hosts: localhost"; \
		echo "  vars:"; \
		echo "    apt_state: absent"; \
		echo "    apt_repo_state: absent"; \
		echo "  roles:"; \
		echo "    - apt-meta"; \
		echo "    - apt-repo-meta"; \
		\
	) > travis-ci.yml \
	&& cat travis-ci.yml

# Ansible Run
RUN set -x \
	&& ( \
		echo "#!/bin/sh -eux"; \
		echo "cat travis-ci.yml"; \
		echo "ansible-playbook -i inventory travis-ci.yml --diff -v"; \
		echo "#ansible-playbook -i inventory travis-ci.yml --diff --check -v"; \
	) > /ansible/run-tests.sh \
	&& chmod +x /ansible/run-tests.sh

ENTRYPOINT ["./run-tests.sh"]
